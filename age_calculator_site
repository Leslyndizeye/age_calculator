<div class="calculator">
    <h2>Age Calculator</h2>
    <div for="no">Day:</div>
    <input type="number" id="no" placeholder="1" min="1" max="31">

    <div for="ukwezi">Month:</div>
    <input type="number" id="ukwezi" placeholder="1" min="1" max="12">

    <div for="umwaka">Year:</div>
    <input type="number" id="umwaka" placeholder="2000" min="1900" max="2024">
    <br>

    <button onclick="calculateAge()">Calculate Age</button>

    <p id="output"></p>
</div>

<script>
    function calculateAge() {
       var no = parseInt(document.getElementById('no').value, 10);
       var ukwezi = parseInt(document.getElementById('ukwezi').value, 10) - 1; 
       var umwaka = parseInt(document.getElementById('umwaka').value, 10);

       var bd = new Date(umwaka, ukwezi, no);
       var regis = new Date();

       var agedifferent = regis - bd;
       var ageDate = new Date(agedifferent);

       var umwakas = ageDate.getUTCFullYear() - 1970;
       var ukwezis = ageDate.getUTCMonth();
       var nos = ageDate.getUTCDate() - 1; 

        document.getElementById('output').innerText = You are ${umwakas} umwakas, ${ukwezis} ukwezis, and ${nos} nos old.;
    }
</script>

